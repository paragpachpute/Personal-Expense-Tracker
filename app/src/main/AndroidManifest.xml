<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.coditsuisse.team29.expensetracker" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ViewIncomeSourceActivity"
            android:label="@string/title_activity_view_income_source" >
        </activity>
        <activity
            android:name=".ViewExpensesActivity"
            android:label="@string/title_activity_view_expenses" >
        </activity>
        <activity
            android:name=".AddBudgetActivity"
            android:label="@string/title_activity_add_budget" >
        </activity>
        <activity
            android:name=".AddExpenseActivity"
            android:label="@string/title_activity_add_expense" >
        </activity>
    </application>

</manifest>
